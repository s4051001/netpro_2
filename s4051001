package netpro2;

import java.io.IOException;
import java.net.URL;
import java.net.URLConnection;
import java.util.List;
import java.util.Map;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.JEditorPane;
import javax.swing.JTextField;
import javax.swing.JTextPane;

/**
 *
 * @author Administrator
 */
class Main extends Thread {
    private JTextField Address;
    private JEditorPane DisP;
    private JTextPane Status;
    private String NameThreard;

    public Main(JTextField url, JEditorPane display, JTextPane showStatus, String threadName) {
        this.Address = url;
        this.DisP = display;
        this.Status = showStatus;
        this.NameThreard = threadName;
    }

    public Main() {
    }

    @Override
    public void run() {
        super.run(); //To change body of generated methods, choose Tools | Templates.
        String status = null;
        status = "Thread " + NameThreard + "Start\n";
        try {
            //  setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            DisP.setPage(Address.getText());
            Status.setText(status);

            //
            URL url1 = new URL(Address.getText());
            URLConnection conn = url1.openConnection();
            Map<String, List<String>> map = conn.getHeaderFields();

            status += "Printing Response Header...\n";

            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                status += entry.getKey() + ":" + entry.getValue() + "\n";
            }

            status += "\nGet Response Header By Key ...\n";
            String server = conn.getHeaderField("Server");

            if (server == null) {
                status += "Key 'Server' is not found!";
            } else {
                status += "Server - " + server;
            }
            status += "\n Done\n";

            Status.setText(status);

            //
        } catch (IOException ex) {
            Logger.getLogger(Main.class.getName()).log(Level.SEVERE, null, ex);
        }
        status += "Thread " + NameThreard + "Stop\n";
        Status.setText(status);
    
    }
    
    
    
    
}
 
 
 
